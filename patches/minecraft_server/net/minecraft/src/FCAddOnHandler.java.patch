+	public static URL getResource(URL url) {
+		try {
+			if (url.getPath().endsWith(".jar") || url.getPath().endsWith("zip")) {
+				return new URL("jar:" + url + "!/");
+			}
+		} catch (MalformedURLException e) {
+			e.printStackTrace();
+		}
+		return url;
+	}
