+	public static ClassLoader getModLoader() {
+		final Class domain = FCAddOnHandler.class;
+		final ClassLoader classLoader = domain.getClassLoader();
+		try {
+			final File[] files = new File(m_LogFile.getParentFile().getCanonicalPath() + "/mods").listFiles();
+			final List<URL> urls = new ArrayList<URL>();
+			final URL baseURL = getResource(domain.getProtectionDomain().getCodeSource().getLocation());
+			urls.add(baseURL);
+			for (int i = 1; i <= files.length; i++) {
+				File file = files[i - 1];
+				if (file.isDirectory())
+					urls.add(file.toURI().toURL());
+				else if (file.getParent().endsWith(".jar"))
+					urls.add(new URL("jar:" + file.toURI().toURL() + "!/"));
+			}
+
+			return new URLClassLoader(urls.toArray(new URL[urls.size()]));
+		} catch (Exception e) {
+			e.printStackTrace();
+		}
+		return classLoader;
+	}
